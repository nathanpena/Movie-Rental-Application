@model Vidly.ViewModels.IndexMovieViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies</h1>
<table class="table table-hover table-bordered">
    <thead>
    <tr>
        <th>Movie</th>
    </tr>
    </thead>
    <tbody>

    @foreach (var movie in Model.Movies)
    {
        <tr>
            <td> @movie.Name</td>
        </tr>
    }

    </tbody>
</table>

